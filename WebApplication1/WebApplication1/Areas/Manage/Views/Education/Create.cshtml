@model Education
@{
    ViewData["Title"] = "Create";
}

<section class="content-main">
    <div class="row">

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Basic</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" placeholder="Type here" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="specialty" class="form-label">SPECIALTY</label>
                            <input asp-for="specialty" placeholder="Type here" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="OrtalamaBal" class="form-label">Ortalama Bal</label>
                            <input asp-for="OrtalamaBal" placeholder="Type here" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="Bitirmevaxti" class="form-label">Bitirme Vaxti</label>
                            <input asp-for="Bitirmevaxti" placeholder="Type here" class="form-control" />
                        </div>






                        <div class="col-9">
                            <div class="content-header">

                                <div>
                                    <button type="submit" class="btn btn-md btn-light rounded font-sm mr-5 text-body hover-up">Created</button>
                                    <button class="btn  rounded font-sm hover-up">Cancel</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!-- card end// -->
            <!-- card end// -->
        </div>

    </div>
</section>


